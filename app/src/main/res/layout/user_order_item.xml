<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="182dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="#ffffff">

        <TextView
            android:id="@+id/tv_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="订单号:"
            android:textColor="#4a4a4a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_left_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_left"
            android:text=""
            android:textColor="#4a4a4a"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="#fe9603"
            android:textSize="12sp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:background="#ffffff">

        <View
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:background="#dddddd">
        </View>

        <RelativeLayout
            android:layout_below="@+id/linear"
            android:id="@+id/relative"
            android:layout_width="match_parent"
            android:layout_marginTop="12dp"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/iv_picture"
                android:layout_width="82dp"
                android:layout_height="48dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/tv_ordertilte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#323232"
                android:textSize="14sp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/iv_picture"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_up_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/relative"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:text="时间:"
            android:textColor="#969698"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_up_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#969698"
            android:textSize="11sp"
            android:layout_alignTop="@+id/tv_up_time"
            android:layout_toEndOf="@+id/tv_down_right" />

        <TextView
            android:id="@+id/tv_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_up_time"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="地点:"
            android:textColor="#949494"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_middle_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_middle"
            android:layout_toRightOf="@+id/tv_middle"
            android:text=""
            android:textColor="#949494"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_middle"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="数量:"
            android:textColor="#949494"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_down_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#949494"
            android:textSize="11sp"
            android:layout_alignTop="@+id/tv_down"
            android:layout_toEndOf="@+id/tv_down"
            android:layout_marginStart="11dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text=""
            android:textColor="#323232"
            android:textSize="14sp"
            android:id="@+id/tv_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</LinearLayout>